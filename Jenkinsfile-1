pipeline {
    agent any

    tools {
        nodejs "Node"
    }

    stages {
        stage('Cloning repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ponjevica-bzz/traffic-light.git'
            }
        }

        stage('Install jest-cli') {
            steps {
                sh 'npm install -g jest-cli'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
