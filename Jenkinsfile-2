pipeline {
    agent any
    tools {nodejs "nodejs"}
    stages {
        stage('Cloning Repository') {
            steps {
                script {
                    git branch: 'main',
                    url: 'https://github.com/ponjevica-bzz/traffic-light.git'
                }
            }
        }
        stage ('Install jest-cli') {
            steps {
                sh 'npm install jest-cli -g'
            }
        }
        stage ('Install dependencies') {
            steps {
                sh 'npm install'
                sh 'npm install --save-dev jest-environment-jsdom'
            }
        }
        stage ('Test') {
            steps {
                sh 'npm test -- --env=jsdom'
            }
        }
    }
}
